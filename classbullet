class Bullet(pygame.sprite.Sprite):
    def __init__(self, x, y):
        super().__init__()
        self.image = pygame.Surface((10, 10))  # A small bullet rectangle
        self.image.fill((255, 0, 0))  # Red color for the bullet
        self.rect = self.image.get_rect()
        self.rect.center = (x, y)
        self.speed = 15  # Speed of the bullet

    def update(self):
        self.rect.x += self.speed  # Move the bullet to the right
        if self.rect.x > 1080:  # Remove bullet if it goes off-screen
            self.kill()
